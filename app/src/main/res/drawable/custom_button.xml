<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:endColor="@color/color_gris"
                android:startColor="@color/color_gris_oscuro"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/color_gris_oscuro" />
            <corners
                android:radius="8dp" />
            <padding
                android:left="8dp"
                android:top="3dp"
                android:right="8dp"
                android:bottom="3dp" />
        </shape>
    </item>


    <item>        
        <shape>
            <gradient
                android:endColor="@color/color_gris"
                android:startColor="@color/color_gris_oscuro"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/color_gris_claro" />
            <corners
                android:radius="8dp" />
            <padding
                android:left="10dp"
                android:top="5dp"
                android:right="10dp"
                android:bottom="5dp" />
        </shape>
    </item>
</selector>
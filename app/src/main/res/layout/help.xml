       	<ImageView 
	    android:layout_width="30dp"
	    android:layout_height="30dp"
	    android:src="@drawable/add_item_main"
	    android:layout_marginLeft="8dp"
	    />	
    
		<TextView android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
	      android:layout_marginLeft="20dp"
	      android:text="@string/help_add_item"
	      />
    </LinearLayout>
    
    <View android:layout_width="fill_parent"
    	  android:layout_height="1dp"
    	  android:background="@color/color_gris"/>
    	  
    <LinearLayout 
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    >
    
       	<ImageView 
	    android:layout_width="30dp"
	    android:layout_height="30dp"
	    android:src="@drawable/manage_item"
	    android:layout_marginLeft="8dp"
	    />	
    
		<TextView android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
	      android:layout_marginLeft="20dp"
	      android:text="@string/help_show_item"
	      />
    </LinearLayout>
    
    <View android:layout_width="fill_parent"
    	  android:layout_height="1dp"
    	  android:background="@color/color_gris"/>
    	  
    <LinearLayout 
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    >
    
		<TextView android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
	      android:layout_marginLeft="15dp"
	      android:text="@string/title_import_csv"
	      />
    
		<TextView android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
	      android:layout_marginTop="10dp"
	      android:layout_marginLeft="10dp"
	      android:text="@string/help_import_csv"
	      />
	      
		<TextView android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
	      android:layout_margin="20dp"
	      android:text="@string/help_import_csv_example"
	      android:padding="5dp"
	      android:textColor="@color/color_negro"
	      android:background="@color/color_gris_claro"
	      />
	      
    </LinearLayout>
    
    <View android:layout_width="fill_parent"
    	  android:layout_height="1dp"
    	  android:background="@color/color_gris"/>    
    	  
    <LinearLayout 
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    >
    
		<TextView android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
	      android:layout_marginLeft="15dp"
	      android:text="@string/title_export_csv"
	      />
    
		<TextView android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
	      android:layout_marginTop="10dp"
	      android:layout_marginLeft="10dp"
	      android:text="@string/help_export_csv"
	      />
	      
    </LinearLayout>
    
    <View android:layout_width="fill_parent"
    	  android:layout_height="1dp"
    	  android:background="@color/color_gris"/>    	  
    	  
  

  </LinearLayout>

 </ScrollView>
 
 </FrameLayout>

<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_margin="3dp"
    android:background="@color/color_gris_oscuro"
    android:padding="8dp">



    <TextView
        android:id="@+id/labelYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:text="@string/label_year"
        android:textColor="@color/color_blanco"
        android:textSize="11sp" />


    <TextView
        android:id="@+id/yearDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:paddingStart="6dp"
        android:paddingLeft="6dp"
        android:paddingEnd="6dp"
        android:paddingRight="6dp"
        android:textSize="17sp"
        android:textColor="@color/color_blanco"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/cantMesesRegistrados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_blanco"
        android:textSize="12sp" />


    <ImageView
        android:id="@+id/btnRemove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:contentDescription="@string/menu_eliminar_itemchart"
        android:src="@drawable/remove_icon"></ImageView>


</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/label_nombre_chart"
            android:layout_width="71dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:gravity="end"
            android:text="@string/label_nombre" />

        <EditText
            android:id="@+id/entryNombreChart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:hint="@string/label_nombre"
            android:inputType="textCapWords"
            android:maxLength="25" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/label_unidad_chart"
            android:layout_width="71dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:gravity="end"
            android:maxLength="20"
            android:text="@string/label_unidad" />


        <EditText
            android:id="@+id/entryUnidadChart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:hint="@string/label_unidad"
            android:inputType="textCapCharacters"
            android:maxLength="10" />

    </LinearLayout>


    <TextView
        android:id="@+id/label_desc_chart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="2dp"

        android:text="@string/label_descripcion" />

    <EditText
        android:id="@+id/entryDescripcionChart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:gravity="top|start"
        android:hint="@string/label_descripcion"
        android:inputType="textMultiLine"
        android:lines="4"
        android:maxLength="100"
        android:singleLine="false" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonGuardarChart"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:layout_marginTop="25dp"
            android:text="@string/label_guardar"
            android:textColor="@color/color_gris"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>
